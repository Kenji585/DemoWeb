@model DemoWeb.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h3 style="text-align:center">BẠN CÓ CHẮC CHẮN MUỐN XÓA SẢN PHẨM NÀY?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.Label("Tên Sản Phẩm", new { @class = "text-primary fs-5" })
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NamePro)
            </dd>

            <dt>
                @Html.Label("Mô tả Sản Phẩm", new { @class = "text-primary fs-5" })
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DecriptionPro)
            </dd>

            <dt>
                @Html.Label("Giá Sản Phẩm", new { @class = "text-primary fs-5" })
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.Label("Hình ảnh Sản Phẩm", new { @class = "text-primary fs-5" })
            </dt>

            <dd>
                <img src="~/Images/@Model.ImagePro" />
            </dd>

            <dt>
                @Html.Label("Danh mục Sản Phẩm", new { @class = "text-primary fs-5" })
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category1.NameCate)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-outline-danger" /> || @Html.ActionLink("Trở lại", "Index", new { @class = "text-primary" })
            </div>
        }
    </div>
